<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="update_pricelist_wizard_form" model="ir.ui.view">
        <field name="name">update.pricelist.wizard.form</field>
        <field name="model">update.pricelist.wizard</field>
        <field name="arch" type="xml">
            <form string="Update Prices">
                <group>
                    <field name="pricelist_id"/>
                    <field name="customer_ids" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="action_update" type="object" string="Update" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
