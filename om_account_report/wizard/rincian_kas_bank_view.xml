<?xml version="1.0"?>
<odoo>

    <record id="view_rincian_kas_bank_form" model="ir.ui.view">
        <field name="name">rincian.kas.bank.wizard.form</field>
        <field name="model">rincian.kas.bank.wizard</field>
        <field name="arch" type="xml">
            <form string="Rincian Kas Bank">
                <group>
                    <field name="journal" domain="['|',('type','=','cash'),('type','=','bank')]"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_kartu" type="object" string="Print"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rincian_kas_bank" model="ir.actions.act_window">
        <field name="name">Rincian Kas Bank</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rincian.kas.bank.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_rincian_kas_bank_form"/>
        <field name="target">new</field>
    </record>

</odoo>
